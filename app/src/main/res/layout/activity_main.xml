<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.siri.qr_code.MainActivity"
    android:background="@drawable/unnamed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME                                      TO                                   QR CODE APPLICATION"
        android:id="@+id/date_tv"
        android:elegantTextHeight="true"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_horizontal"
        android:textColor="#ff1e2180"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already a user? Sign_in"
        android:id="@+id/fuserid"
        android:layout_below="@+id/date_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:textColor="#fffffcf9"
        android:textSize="23dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New user? Sign_up"
        android:id="@+id/Pass_txt"
        android:layout_below="@+id/fuserid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:textColor="#fffffcf9"
        android:textSize="23dp"
        android:textStyle="bold|italic"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/Login_main"
        android:layout_below="@+id/fuserid"
        android:layout_centerHorizontal="true"
        android:background="#fff7f7ff"
        android:textColor="#ff000000"
        android:textSize="17dp"
        style="@android:style/Holo.Light.ButtonBar" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/Reg_main"
        android:layout_below="@+id/Pass_txt"
        android:layout_centerHorizontal="true"
        android:background="#fffaf8ff"
        android:textColor="#ff000000"
        android:textSize="17dp"/>

</RelativeLayout>
