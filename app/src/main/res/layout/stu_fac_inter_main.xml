<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/unnamed"
    tools:context="com.example.siri.qr_code.Profile.Stu_fac_inter_main">


<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableRow>
        <TextView
            android:text="@string/stu_fac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/date_tv" />
    </TableRow>
    <TableRow>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="Talk to a Faculty"
            android:src="@drawable/studentfacinter"
            android:layout_marginTop="15dp"/>

    </TableRow>
    <TableRow>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Talk to a Faculty"
            android:id="@+id/tbutt"
            android:layout_below="@+id/date_tv"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>
    </TableRow>
    <TableRow>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="Write a Review"
            android:src="@drawable/writeareview"
            android:layout_marginTop="30dp"/>

    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write a review"
            android:id="@+id/wrbutt"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>
    </TableRow>
    </TableLayout>



</RelativeLayout>
